server {
  listen 80;
  listen [::]:80;

  # If Traefik is doing HTTPS, do NOT redirect to https here.
  # Traefik can enforce redirect at the edge.

  # App settings
  client_max_body_size 100m;
  client_body_timeout 300s;

  # Serve the built Vite files
  root /usr/share/nginx/html;
  index index.html;

  # Forward /api/* to backend container (internal Docker network)
  location /api/ {
    proxy_pass http://api:3000;   # keeps /api/... intact
    proxy_http_version 1.1;
    proxy_set_header Host $host;

    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    # IMPORTANT: Traefik is the TLS terminator; it will send X-Forwarded-Proto=https.
    proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;

    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
    proxy_buffering off;
  }

  location /auth/ {
    proxy_pass http://api:3000/auth/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
  }

  # Cache built static assets
  location /assets/ {
    try_files $uri =404;
    access_log off;
    expires 1y;
    add_header Cache-Control "public, max-age=31536000, immutable";
  }

  # SPA fallback
  location / {
    try_files $uri /index.html;
  }
}